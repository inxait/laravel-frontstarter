root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

[*.{js,css,scss}]
indent_style = space
indent_size = 2
